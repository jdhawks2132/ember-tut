<main class='container mt-5'>
  <div>
    <h1>Shopping Cart</h1>
    <ul class='nav'>
      <li class='nav-item'>
        <LinkTo class='nav-link' @route='index'>Home</LinkTo>
      </li>
      <li class='nav-item'>
        <LinkTo class='nav-link' @route='cart'>Shopping Cart</LinkTo>
      </li>
    </ul>
  </div>
  <section class='text-end mx-auto'>
    <div class='row'>
      <span class='col'>Subtotal</span>
      <span class='col'>{{this.subtotal}}</span>
    </div>
    <div class='row'>
      <span class='col'>Tax</span>
      <span class='col'>{{this.tax}}</span>
    </div>
    <div class='row'>
      <span class='col'>Total</span>
      <span class='col'>{{this.total}}</span>
    </div>

  </section>
  <button type='button' class='btn btn-success float-end'>Checkout</button>
</main>